<Window x:Class="DeepLearning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:DeepLearning"
        mc:Ignorable="d"
        Closing="WindowClosing" 
        ResizeMode="CanMinimize"
        Title="DeepLearning" Height="700" Width="1000" Background="#FF3E6FB3" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <TabControl x:Name="Log" HorizontalAlignment="Left" Height="172" Margin="5,485,0,0" VerticalAlignment="Top" Width="790" Background="#FFE6F0FF">
            <TabControl.Resources>
                <Style TargetType="RichTextBox">
                    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="IsReadOnly" Value="True" />
                    <Setter Property="DockPanel.Dock" Value="Bottom" />
                </Style>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="FontSize" Value="16" />
                </Style>
            </TabControl.Resources>
            <TabItem Header="一般" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxGeneral" Background="#FF43B5BF"/>
            </TabItem>
            <TabItem Header="警告" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxWarning" Background="#FF43AABF"/>
            </TabItem>
            <TabItem Header="錯誤" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxError" Background="#FF43A0BF"/>
            </TabItem>
            <TabItem Header="除錯" Style="{StaticResource BaseTabcontrol}">
                <RichTextBox x:Name="richTextBoxDebug" Background="#FF4396BF"/>
            </TabItem>
        </TabControl>
        <TabControl HorizontalAlignment="Left" Margin="5,3,0,0" VerticalAlignment="Top" Height="478" Width="978" Background="#FFE6F0FF">
            <TabItem Header="訓練畫面" Style="{StaticResource BaseTabcontrol}">
                <Grid>
                    <Button x:Name="Demo" Style="{StaticResource BaseButton}" Margin="709,206,121,185" Content="Demo" FontSize="18" Click="Train_Btn_Click"/>
                    <TextBox x:Name="Parameter1" Style="{StaticResource BaseTextBox}" Tag="请输入内容..." Margin="718,312,124,94"/>
                    <TextBox x:Name="Parameter2" Style="{StaticResource BaseTextBox}" Tag="请输入内容..." Margin="718,374,124,32"/>
                </Grid>
            </TabItem>
            <TabItem Header="預測畫面" Style="{StaticResource BaseTabcontrol}">
                <Grid>
                    <Button x:Name="Predict" Style="{StaticResource CircleButton}" Margin="131,164,744,185" Content="預測" FontSize="18" Click="Predict_Btn_Click"/>
                    <CheckBox Style="{StaticResource BaseCheckBox}" Background="Green" IsChecked="False" Content="Off" Tag="On" Margin="137,287,756,121"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
